{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show cart</h2>
        <div class="card">
            <div class="card-header">
            <form method="post" action="{{ path('app_cart_delete', {'id': cart.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <a
                    class="btn btn-outline-info"
                    href="{{ path('app_cart_index') }}">
                    View all carts
                </a>
                <a
                    class="btn btn-outline-success"
                    href="{{ path('app_cart_edit', {'id': cart.id}) }}">
                    Edit
                </a>

                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cart.id) }}">
                <button class="btn btn-outline-danger">Delete</button>
            </form>
            </div>
            <div class="card-body">
                <b class="text-muted">Id:</b>
                <p>{{ cart.id }}</p>
                <b class="text-muted">Amount:</b>
                <p>{{ cart.amount }}</p>
                <b class="text-muted">Comment:</b>
                <p>{{ cart.comment }}</p>
            </div>
        </div>
    </div>
{% endblock %}