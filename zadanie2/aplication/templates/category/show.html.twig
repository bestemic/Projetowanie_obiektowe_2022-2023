{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show category</h2>
        <div class="card">
            <div class="card-header">
            <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <a
                    class="btn btn-outline-info"
                    href="{{ path('app_category_index') }}">
                    View all categories
                </a>
                <a
                    class="btn btn-outline-success"
                    href="{{ path('app_category_edit', {'id': category.id}) }}">
                    Edit
                </a>

                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="btn btn-outline-danger">Delete</button>
            </form>
            </div>
            <div class="card-body">
                <b class="text-muted">Id:</b>
                <p>{{ category.id }}</p>
                <b class="text-muted">Name:</b>
                <p>{{ category.name }}</p>
                <b class="text-muted">Description:</b>
                <p>{{ category.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}